class main{
  public static void main(String[] args){
    int rows=4;
    int cols=4;
    int[][] arr=new int[rows][cols];
    int value=1;
    for(int i=0;i<rows;i++){
      for(int j=0;j<cols;j++){
        arr[i][j]=value;
        value++;
        
      }
    }
    System.out.print("2D array is :");
    for(int i=0;i<rows;i++){
      for(int j=0;j<cols;j++){
        System.out.print(arr[i][j]+" ");

    }
      System.out.println();
    
  }
}
}
